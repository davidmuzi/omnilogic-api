{
  "name": "omnilogic-api",
  "version": "0.0.1",
  "description": "A TypeScript API client for the Hayward OmniLogic pool control system",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "license": "MIT",
  "author": {
    "name": "David Muzi",
    "url": "https://github.com/davidmuzi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/omnilogic-api.git"
  },
  "bugs": {
    "url": "https://github.com/davidmuzi/omnilogic-api/issues"
  },
  "homepage": "https://github.com/davidmuzi/omnilogic-api",
  "keywords": [
    "hayward",
    "omnilogic",
    "pool",
    "automation",
    "api",
    "typescript"
  ],
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build",
    "clean": "rm -rf dist"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^22.15.21",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.3",
    "jwt-decode": "^4.0.0"
  }
}
